{
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
    },
    "extensionsToTreatAsEsm": [".tsx"],
    "bail": 1,
    "verbose": true,
    "moduleNameMapper": {
      "\\.(css|module.scss|scss|gif|svg|png)$": "<rootDir>/__tests__/mocks/styleMock.json"
    },
    "setupFilesAfterEnv": ["<rootDir>/setupTest.ts"],
    "testEnvironmentOptions": {
      "customExportConditions": [""]
    },
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "!**/firebase/**",
      "!src/main.tsx"
  ]
  }